<% if (success && success.length) { %>
    <div class="w-50 mx-auto alert alert-success alert-dismissible fade show" role="alert" style="box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); border-radius: 12px; animation: fadeInSlide 0.6s ease; padding: 20px; background: linear-gradient(135deg, #4caf50, #81c784); color: #fff; position: relative;">
        <strong style="font-weight: 600;">Success:</strong> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="position: absolute; top: 10px; right: 10px; filter: invert(1);"></button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="w-50 mx-auto alert alert-danger alert-dismissible fade show" role="alert" style="box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); border-radius: 12px; animation: fadeInSlide 0.6s ease; padding: 20px; background: linear-gradient(135deg, #f44336, #e57373); color: #fff; position: relative;">
        <strong style="font-weight: 600;">Error:</strong> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="position: absolute; top: 10px; right: 10px; filter: invert(1);"></button>
    </div>
<% } %>


<style>
@keyframes fadeInSlide {
    0% {
        opacity: 0;
        transform: translateY(-20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

.btn-close:hover {
    transform: scale(1.1);
    transition: transform 0.2s ease;
}
</style>
